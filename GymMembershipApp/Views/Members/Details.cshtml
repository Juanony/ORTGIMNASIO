@model Member
@{
    ViewData["Title"] = "Member Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-person-circle"></i> @Model.FullName</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Member Information -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-person"></i> Personal Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Name:</dt>
                    <dd class="col-sm-7">@Model.FullName</dd>

                    <dt class="col-sm-5">Email:</dt>
                    <dd class="col-sm-7">@Model.Email</dd>

                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7">@Model.PhoneNumber</dd>

                    <dt class="col-sm-5">Date of Birth:</dt>
                    <dd class="col-sm-7">@(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "N/A")</dd>

                    <dt class="col-sm-5">Address:</dt>
                    <dd class="col-sm-7">@(Model.Address ?? "N/A")</dd>

                    <dt class="col-sm-5">Registration:</dt>
                    <dd class="col-sm-7">@Model.RegistrationDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-telephone"></i> Emergency Contact</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Name:</dt>
                    <dd class="col-sm-7">@(Model.EmergencyContact ?? "N/A")</dd>

                    <dt class="col-sm-5">Phone:</dt>
                    <dd class="col-sm-7">@(Model.EmergencyPhone ?? "N/A")</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-card-checklist"></i> Membership</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Plan:</dt>
                    <dd class="col-sm-7">@(Model.MembershipPlan?.Name ?? "N/A")</dd>

                    <dt class="col-sm-5">Start Date:</dt>
                    <dd class="col-sm-7">@(Model.MembershipStartDate?.ToString("MMM dd, yyyy") ?? "N/A")</dd>

                    <dt class="col-sm-5">End Date:</dt>
                    <dd class="col-sm-7">
                        @if (Model.MembershipEndDate.HasValue)
                        {
                            @Model.MembershipEndDate.Value.ToString("MMM dd, yyyy")
                            @if (Model.MembershipEndDate < DateTime.Today)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else if (Model.HasPaymentDue)
                            {
                                <span class="badge bg-warning">Due Soon</span>
                            }
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-controller="Payments" asp-action="Create" asp-route-memberId="@Model.Id" class="btn btn-success btn-sm w-100">
                    <i class="bi bi-cash"></i> Make Payment
                </a>
            </div>
        </div>
    </div>

    <!-- Activity -->
    <div class="col-md-8">
        <!-- Recent Attendance -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Attendance</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Attendances.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Check-In</th>
                                    <th>Check-Out</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attendance in Model.Attendances)
                                {
                                    <tr>
                                        <td>@attendance.CheckInTime.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>
                                            @if (attendance.CheckOutTime.HasValue)
                                            {
                                                @attendance.CheckOutTime.Value.ToString("HH:mm")
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">In Gym</span>
                                            }
                                        </td>
                                        <td>
                                            @if (attendance.Duration.HasValue)
                                            {
                                                @($"{(int)attendance.Duration.Value.TotalHours}h {attendance.Duration.Value.Minutes}m")
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted py-3">No attendance records</p>
                }
            </div>
        </div>

        <!-- Recent Payments -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-cash-coin"></i> Payment History</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Payments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Plan</th>
                                    <th>Method</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                        <td><strong>$@payment.Amount.ToString("N2")</strong></td>
                                        <td>@(payment.MembershipPlan?.Name ?? "N/A")</td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>
                                            @switch (payment.Status)
                                            {
                                                case PaymentStatus.Completed:
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case PaymentStatus.Pending:
                                                    <span class="badge bg-warning">Pending</span>
                                                    break;
                                                case PaymentStatus.Failed:
                                                    <span class="badge bg-danger">Failed</span>
                                                    break;
                                                case PaymentStatus.Refunded:
                                                    <span class="badge bg-info">Refunded</span>
                                                    break;
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted py-3">No payment records</p>
                }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-sticky"></i> Notes</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        }
    </div>
</div>
