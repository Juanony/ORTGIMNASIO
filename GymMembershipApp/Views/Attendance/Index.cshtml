@model IEnumerable<Attendance>
@{
    ViewData["Title"] = "Attendance Records";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-clock-history"></i> Attendance Records</h1>
    <a asp-action="QuickCheckIn" class="btn btn-primary">
        <i class="bi bi-box-arrow-in-right"></i> Quick Check-In
    </a>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" value="@ViewData["StartDate"]" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" value="@ViewData["EndDate"]" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Member</label>
                <select name="memberId" class="form-select" asp-items="ViewBag.Members">
                    <option value="">All Members</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Attendance Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Member</th>
                        <th>Check-In Time</th>
                        <th>Check-Out Time</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var attendance in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@attendance.Member.FullName</strong>
                                </td>
                                <td>@attendance.CheckInTime.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>
                                    @if (attendance.CheckOutTime.HasValue)
                                    {
                                        @attendance.CheckOutTime.Value.ToString("HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (attendance.Duration.HasValue)
                                    {
                                        @($"{(int)attendance.Duration.Value.TotalHours}h {attendance.Duration.Value.Minutes}m")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (attendance.CheckOutTime.HasValue)
                                    {
                                        <span class="badge bg-secondary">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">In Gym</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (!attendance.CheckOutTime.HasValue)
                                        {
                                            <form asp-action="CheckOut" asp-route-id="@attendance.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Check Out">
                                                    <i class="bi bi-box-arrow-right"></i>
                                                </button>
                                            </form>
                                        }
                                        <a asp-action="Delete" asp-route-id="@attendance.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No attendance records found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <p class="mb-0 text-muted">Total: @Model.Count() record(s)</p>
    </div>
</div>
