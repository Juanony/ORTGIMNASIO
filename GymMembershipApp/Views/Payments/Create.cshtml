@model Payment
@{
    ViewData["Title"] = "New Payment";
}

<h1 class="mb-4"><i class="bi bi-cash-coin"></i> New Payment</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="MemberId" class="form-label"></label>
                        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId">
                            <option value="">-- Select Member --</option>
                        </select>
                        <span asp-validation-for="MemberId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MembershipPlanId" class="form-label"></label>
                            <select asp-for="MembershipPlanId" class="form-select" asp-items="ViewBag.MembershipPlanId">
                                <option value="">-- Select Plan (Optional) --</option>
                            </select>
                            <span asp-validation-for="MembershipPlanId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentMethod" class="form-label"></label>
                            <select asp-for="PaymentMethod" class="form-select">
                                <option value="@PaymentMethod.Cash">Cash</option>
                                <option value="@PaymentMethod.CreditCard">Credit Card</option>
                                <option value="@PaymentMethod.DebitCard">Debit Card</option>
                                <option value="@PaymentMethod.BankTransfer">Bank Transfer</option>
                                <option value="@PaymentMethod.Other">Other</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="@PaymentStatus.Completed">Completed</option>
                                <option value="@PaymentStatus.Pending">Pending</option>
                                <option value="@PaymentStatus.Failed">Failed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TransactionReference" class="form-label"></label>
                        <input asp-for="TransactionReference" class="form-control" placeholder="Receipt number, transaction ID, etc." />
                        <span asp-validation-for="TransactionReference" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> If you select a membership plan and mark the payment as completed, the member's membership will be automatically extended.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Record Payment
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Payment Info</h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>Select the member making the payment</li>
                    <li>Enter the payment amount</li>
                    <li>Select a membership plan if renewing/extending membership</li>
                    <li>Choose the payment method</li>
                    <li>Mark as completed if payment received</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
