@model IEnumerable<Payment>
@{
    ViewData["Title"] = "Payments";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-cash-coin"></i> Payments</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Payment
    </a>
</div>

<!-- Statistics -->
<div class="row g-3 mb-3">
    <div class="col-md-12">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h3 class="mb-0">$@String.Format("{0:N2}", ViewData["TotalAmount"])</h3>
                <p class="mb-0">Total Completed Payments</p>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" value="@ViewData["StartDate"]" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" value="@ViewData["EndDate"]" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Member</label>
                <select name="memberId" class="form-select" asp-items="ViewBag.Members">
                    <option value="">All Members</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="@((int)PaymentStatus.Completed)">Completed</option>
                    <option value="@((int)PaymentStatus.Pending)">Pending</option>
                    <option value="@((int)PaymentStatus.Failed)">Failed</option>
                    <option value="@((int)PaymentStatus.Refunded)">Refunded</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Payments Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Member</th>
                        <th>Amount</th>
                        <th>Plan</th>
                        <th>Date</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@payment.Member.FullName</strong>
                                    <br />
                                    <small class="text-muted">@payment.Member.Email</small>
                                </td>
                                <td><strong>$@payment.Amount.ToString("N2")</strong></td>
                                <td>@(payment.MembershipPlan?.Name ?? "N/A")</td>
                                <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@payment.PaymentMethod</span>
                                </td>
                                <td>
                                    @switch (payment.Status)
                                    {
                                        case PaymentStatus.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case PaymentStatus.Pending:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case PaymentStatus.Failed:
                                            <span class="badge bg-danger">Failed</span>
                                            break;
                                        case PaymentStatus.Refunded:
                                            <span class="badge bg-info">Refunded</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@payment.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@payment.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No payments found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <p class="mb-0 text-muted">Total: @Model.Count() payment(s)</p>
    </div>
</div>
