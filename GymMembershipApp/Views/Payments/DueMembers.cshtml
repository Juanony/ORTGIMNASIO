@model IEnumerable<Member>
@{
    ViewData["Title"] = "Payment Due Members";
}

<h1 class="mb-4"><i class="bi bi-exclamation-triangle-fill text-warning"></i> Payment Due Members</h1>

<div class="alert alert-warning">
    <i class="bi bi-info-circle"></i> These members have memberships expiring within the next 7 days
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Member</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Current Plan</th>
                        <th>Expires</th>
                        <th>Days Left</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var member in Model)
                        {
                            var daysLeft = (member.MembershipEndDate!.Value - DateTime.Today).Days;
                            <tr class="@(daysLeft <= 3 ? "table-danger" : "table-warning")">
                                <td>
                                    <strong>@member.FullName</strong>
                                </td>
                                <td>@member.Email</td>
                                <td>@member.PhoneNumber</td>
                                <td>@member.MembershipPlan?.Name</td>
                                <td>@member.MembershipEndDate?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge @(daysLeft <= 3 ? "bg-danger" : "bg-warning")">
                                        @daysLeft day(s)
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Create" asp-route-memberId="@member.Id" class="btn btn-success btn-sm">
                                        <i class="bi bi-cash"></i> Make Payment
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No members with payment due
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <p class="mb-0 text-muted">Total: @Model.Count() member(s)</p>
    </div>
</div>
